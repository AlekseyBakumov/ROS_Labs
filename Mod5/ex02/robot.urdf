<?xml version="1.0"?>
<robot name="sam_bot" xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:property name="base_width" value="0.4"/>
  <xacro:property name="base_length" value="0.7"/>
  <xacro:property name="base_height" value="0.2"/>

  <xacro:property name="wheel_radius" value="0.2"/>
  <xacro:property name="wheel_width" value="0.1"/>
  <xacro:property name="wheel_ygap" value="0.025"/>
  <xacro:property name="wheel_zoff" value="-0.05"/>
  <xacro:property name="wheel_xoff" value="0.25"/>
  
  <xacro:property name="material_density" value="1"/>

  <link name="base_link">
    <visual>
      <geometry>
        <box size="${base_length} ${base_width} ${base_height}"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <box size="${base_length} ${base_width} ${base_height}"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="material_density * (base_length * base_width * base_height)"/>
      <inertia ixx="1e-3" ixy="0.0" ixz="0.0" iyy="1e-3" iyz="0.0" izz="1e-3"/>
    </inertial>
  </link>

  <xacro:macro name="wheel" params="prefix x_reflect y_reflect">
    <link name="${prefix}_link">
      <visual>
        <origin xyz="0 ${y_reflect*(wheel_width/2)} 0" rpy="${pi/2} 0 0"/>
        <geometry>
            <cylinder radius="${wheel_radius}" length="${wheel_width}"/>
        </geometry>
      </visual>
    <collision>
      <geometry>
        <origin xyz="0 ${y_reflect*(wheel_width/2)} 0" rpy="${pi/2} 0 0"/>
      </geometry>
    </collision>
      <inertial>
        <mass value="material_density * wheel_radius * wheel_width"/>
        <inertia ixx="1e-3" ixy="0.0" ixz="0.0" iyy="1e-3" iyz="0.0" izz="1e-3"/>
      </inertial>
    </link>

    <joint name="${prefix}_joint" type="continuous">
      <parent link="base_link"/>
      <child link="${prefix}_link"/>
      <origin xyz="${wheel_xoff} ${y_reflect*base_width/2 + wheel_ygap} ${wheel_zoff}" rpy="0 0 0"/>
      <axis xyz="0 1 0"/> 
    </joint>
  </xacro:macro>

  <xacro:wheel prefix="wheel_left" x_reflect="-1" y_reflect="-1" />
  <xacro:wheel prefix="wheel_right" x_reflect="-1" y_reflect="1" />

</robot>